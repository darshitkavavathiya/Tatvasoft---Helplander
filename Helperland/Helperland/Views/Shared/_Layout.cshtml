<!doctype html>

<html lang="en">

<head>


  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">


  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>

          <link rel="stylesheet" href="~/css/index.css" />
          <link rel="stylesheet" href="~/css/faq.css" />
          <link rel="stylesheet" href="~/css/contact.css" />
          <link rel="stylesheet" href="~/css/price.css" />
          <link rel="stylesheet" href="~/css/about.css" />

<title>@ViewData["Title"]</title>

</head>

<body>


  <!-- header section -->



  <!-- nav bar -->

  <nav class="navbar navbar-expand-lg navbar-dark faq-nav-bg ">

    <div class="container-fluid">

      <a class="navbar-brand" href="Home.html">
        <img src="~/Images/logo-small.png" class=" navbar-brand nav-logo ">
      </a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav ms-auto">

          <a class="btn btn-outline-light  nav-book-btn">Book now</a>
          <a  class="btn btn-outline-light nav-price-btn" asp-controller="Public" asp-action="Price">Prices & services</a>
          <a class="nav-link ">&nbsp;Warranty&nbsp;</a>
          <a class="nav-link ">&nbsp;Blog&nbsp;</a>
          <a class="nav-link " asp-controller="Public" asp-action="Contact">&nbsp;Contact&nbsp; </a>
          <a  class="btn btn-outline-light nav-log-btn" asp-controller="Public" asp-action="Index" asp-route-loginModal="true">Login</a>
          <a  class="btn btn-outline-light nav-become-btn"  asp-controller="UserManagement" asp-action="BecomeAProvider">Become a Helper</a>


        </div>

      </div>

    </div>

  </nav>

        @RenderBody()
    

  <!--footer-->



  <div class=" footer-container">

    <div class="row">

      <div class="col-sm-3 footer-logo-col">
        <img src="~/Images/footer-logo.png" class="img-fluid footer-logo-image">
      </div>


      <div class="col-sm-6 footer-nav-col">

        <a class="footer-link " asp-controller="Public" asp-action="Index"> &nbsp;HOME</a>
        <a class="footer-link " asp-controller="Public" asp-action="About"> ABOUT</a>
        <a class="footer-link "> &nbsp;TESTIMONIALS</a>
        <a class="footer-link " asp-controller="Public" asp-action="Faq"> &nbsp;FAQ</a>
        <a class="footer-link "> &nbsp;INSURANCE</a>
        <a class="footer-link "> &nbsp;IMPRESSUM</a>

      </div>

      <div class="col-sm-3 footer-social-col">
        <img src="~/Images/ic-facebook.png" class="img-fluid footer-social-image">

        <img src="~/Images/ic-instagram.png" class="img-fluid footer-social-image">
      </div>


    </div>
    <div class="row footer-term-row">
      <hr class="fluid footer-hr">
      <p class="footer-text">
        ©2018 Helperland. All rights reserved.&nbsp;&nbsp; &nbsp;&nbsp; <a>Terms and Conditions </a>|<a>&nbsp;Privacy
          Policy</a>
      </p>

    </div>

  </div>






  <!-- script -->
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>

</body>

</html>

