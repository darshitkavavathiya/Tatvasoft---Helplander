 @model Helperland.Models.ResetPassword
@{
	ViewData["Title"] = "ResetPassword";
}


<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Helperland | Reset Password</title>

	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

	<link rel="stylesheet" href="~/css/faq.css">
		<link rel="stylesheet" href="~/css/navbar.css">

		<link rel="stylesheet" href="~/css/contact.css">



	<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap" rel="stylesheet">

	<script src="https://kit.fontawesome.com/5602f8a8c9.js" crossorigin="anonymous"></script>

</head>
<body>
	<!-- header starts -->
	<nav class="navbar navbar-expand-lg navbar-dark fixed-top ">

	<div class="container-fluid">


		<a class="navbar-brand" asp-action="Index" asp-controller="Public">
			<img src="~/Images/logo-small.png" >
		</a>





		<button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight"
				aria-controls="offcanvasRight" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>




		<div class="offcanvas offcanvas-end navbar-collapse menu " tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
			<ul class="navbar-nav navbar-content">
		 
			 


				<li class="nav-item">
					<a class="nav-link" asp-controller="Public" asp-action="Price">Prices & services</a>
				</li>
				<li class="nav-item">
					<a class="nav-link ">&nbsp;Warranty&nbsp;</a>
				</li>
				<li class="nav-item">
					<a class="nav-link ">&nbsp;Blog&nbsp;</a>
				</li>
				<li class="nav-item">
					<a class="nav-link " asp-controller="Public" asp-action="Contact">&nbsp;Contact&nbsp; </a>
				</li>




			  

					<li class="nav-item">
						<a class="nav-link Btn loginBtn" asp-controller="Public" asp-action="Index" asp-route-loginModal="true">Login</a>
					</li>

					<li class="nav-item">
						<a class="nav-link Btn becomeAHelperBtn" asp-controller="UserManagement" asp-action="BecomeAProvider">Become a Helper</a>
					</li>
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
							<img style="vertical-align: baseline;" src="~/Images/ic-flag.png" alt="">
						</a>
						<ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
							<li><a class="dropdown-item" href="#"><img src="~/Images/ic-flag.png" alt=""> <span>India</span> </a></li>
							<li><a class="dropdown-item" href="#"><img src="~/Images/ic-flag.png" alt=""> <span>U.K.</span> </a></li>
							<li><a class="dropdown-item" href="#"><img src="~/Images/ic-flag.png" alt=""> <span>U.S.A.</span> </a></li>
						</ul>
					</li>
			   












			</ul>

		</div>








	</div>

</nav>
<div style=" 
	height: 90px;"></div>
	<header>

		<!-- title -->
		<div class="text-center mt-4">
			<h1 class="title">Reset Password</h1>
		</div>
		<div class="d-flex align-items-center justify-content-center">
			<hr>
			<div class="text-center separator" style="display: inline;">
			</div>
			<hr>
		</div>
		<!-- title ends -->
	</header>
  
	<main>


		<section style="max-width:400px" class="text-center container-fluid contact-us-form" >

			<span id="alreadyReg" class="text-danger">
				@if (ViewBag.Message != null)
				{
					@ViewBag.Message
				}
			</span>

			<!-- form starts -->
			<form asp-controller="UserManagement" asp-action="ResetPassword" method="post">
				<div id="form-elements">
					<div asp-validation-summary="All"></div>
					
					<div>
						<input class="form-control mt-4" type="hidden" asp-for="userId" value=@TempData["id"]/>
						<input class="form-control mt-4" type="text" asp-for="password" id="password" placeholder="Password">
					</div>
						<div>
						<input class="form-control mt-4" type="text" id="confirmPwd" placeholder="Confirm Password">
					</div>

					<div id="contactbtn-div"><button type="submit" class="loginBtn mt-4" id="contact-btn">Reset</button></div>

				</div>
			</form>
			<!-- form ends -->
		</section>
		<!-- contact form ends -->

	</main>
	
	<section class="our-news-letter mt-4">
		<div class="container text-center">
			<h2>GET OUR NEWSLETTER</h2>
			<div class="form-row d-flex justify-content-center align-items-center">
				<div class="form-group">
					<label for="email" style="display: none;">YOUR EMAIL</label>
					<input type="text" placeholder="YOUR EMAIL" id="email" class="form-control">
				</div>
				<div class="btn-wrapper">
					<button class="submit">Submit</button>
				</div>
			</div>
		</div>
	</section>

	<div class=" footer-container mt-4">

		<div class="row">

			<div class="col-sm-3 footer-logo-col">
				<img src="~/Images/footer-logo.png" class="img-fluid footer-logo-image">
			</div>


			<div class="col-sm-6 footer-nav-col">

				<a class="footer-link " asp-controller="Public" asp-action="Index"> &nbsp;HOME</a>
				<a class="footer-link " asp-controller="Public" asp-action="About"> ABOUT</a>
				<a class="footer-link "> &nbsp;TESTIMONIALS</a>
				<a class="footer-link " asp-controller="Public" asp-action="Faq"> &nbsp;FAQ</a>
				<a class="footer-link "> &nbsp;INSURANCE</a>
				<a class="footer-link "> &nbsp;IMPRESSUM</a>

			</div>

			<div class="col-sm-3 footer-social-col">
				<img src="~/Images/ic-facebook.png" class="img-fluid footer-social-image">

				<img src="~/Images/ic-instagram.png" class="img-fluid footer-social-image">
			</div>


		</div>
		<div class="row footer-term-row">
			<hr class="fluid footer-hr">
			<p class="footer-text">
				©2018 Helperland. All rights reserved.&nbsp;&nbsp; &nbsp;&nbsp; <a>Terms and Conditions </a>|<a>
					&nbsp;Privacy
					Policy
				</a>
			</p>

		</div>
		</div>
	   
	<!-- main ends -->

	<script>
		var pwd = document.getElementById("password");
		var conf = document.getElementById("confirmPwd");
		var submit = document.getElementById("contact-btn");

		conf.addEventListener("change", function () {
		   
			if (pwd.value != conf.value) {
				submit.disabled = true;
				window.alert("password and confirmpassword are not same");
			}
			else {
				submit.disabled = false;
			}
		});


	</script>
</body>
</html>


