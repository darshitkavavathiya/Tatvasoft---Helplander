@model Helperland.Models.User
@{
	ViewData["Title"] = "Become A Provider";
	Layout = null;
}

<!doctype html>

<html lang="en">

<head>


	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">


	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
		crossorigin="anonymous">
	<link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>

	<link rel="stylesheet" href="~/css/become-a-pro.css" />



	<title>Become a Service Provider</title>

</head>

<body>


	<!-- header section -->


	<section class="container-fluid header-become-a-pro">

		<!-- nav bar -->

		<nav class="navbar navbar-expand-lg navbar-dark ">

			<div class="container-fluid">

				<a class="navbar-brand" href="Home.html">
					<img src="~/Images/logo-large.png" class=" navbar-brand nav-logo ">
				</a>

				<button class="navbar-toggler" type="button" data-bs-toggle="collapse"
					data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup"
					aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
					<div class="navbar-nav ms-auto">

						<button type="button" class="btn btn-outline-light  nav-book-btn">Book a
							Cleaner</button>
						<a class="nav-link " href="#"> Prices</a>
						<a class="nav-link ">Our Guarantee</a>
						<a class="nav-link ">Blog</a>
						<a class="nav-link ">Contact us</a>
						<button type="button"
							class="btn btn-outline-light nav-log-btn">Login</button>
						<button type="button"
							class="btn btn-outline-light nav-become-btn">Become
							aHelper</button>

						<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown"
							role="button" data-bs-toggle="dropdown" aria-expanded="false">
							<img style="vertical-align: baseline;" src="~/Images/ic-flag.png"
								alt="">
						</a>
						<ul class="dropdown-menu dropdown-menu-end"
							aria-labelledby="navbarDropdown">
							<li><a class="dropdown-item" href="#"><img src="img/ic-flag.png"
										alt=""> <span>Hindi</span>
								</a></li>
							<li><a class="dropdown-item" href="#"><img src="img/ic-flag.png"
										alt="">
									<span>English</span> </a></li>
							<li><a class="dropdown-item" href="#"><img src="img/ic-flag.png"
										alt=""> <span>GUj</span>
								</a></li>
						</ul>
						</a>
					</div>

				</div>

			</div>

		</nav>

		<div class="register-form">




			<form method="post" asp-controller="UserManagement"  asp-action="BecomeAProvider">
				<h1>
					Register Now!
				</h1>

				 <span asp-validation-for="FirstName" class="Validation-Error"></span>
				<input class="form-control" asp-for="FirstName" placeholder="First Name" />
				 <span asp-validation-for="LastName" class="Validation-Error"></span>
				 <input class="form-control" asp-for="LastName" placeholder="Last Name" />
				 <span asp-validation-for="Email" class="Validation-Error"></span>
				<input class="form-control" asp-for="Email" placeholder="E-mail" />
				
					<span asp-validation-for="Mobile" class="Validation-Error"></span>
				<div class="input-group mx-0  row">

					<input type="text" maxlength="3" class="input-group-text col-2 px-0 mb-3"
						id="countryCode" placeholder="+91" />
					<input maxlength="10" asp-for="Mobile"
						class="form-control col-10" placeholder="Phone Number"
						aria-label="Phone Number" aria-describedby="basic-addon1"
						autocomplete="off" />
				</div>

					<span asp-validation-for="Password" class="Validation-Error"></span>
				<input class="form-control" asp-for="Password" type="password" placeholder="Password" />
					<span asp-validation-for="ConfirmPassword"  class="Validation-Error"></span>
				<input class="form-control" asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" />
										

				<div class="form-check ">
					<input type="checkbox" class="form-check-input" id="sendNewsletter" />
					<label class="form-check-label" for="sendNewsletter">Send me newsletters from
						Helperland</label>
				</div>

				<div class="form-check">
					<input type="checkbox" class="form-check-input" id="acceptTerms" />
					<label class="form-check-label " for="acceptTerms">
						I accept <a href="#">terms and conditions</a> & <a href="#">privacy
							policy</a>
					</label>
				</div>
				<div class="text-center">
					<button type="submit" class="btn border-btn">Get Started <img
							src="~/Images/arrow-white.png" alt=".."></button>
				</div>
			</form>



		</div>
		<div class=" text-center">
			<a href="#how-it-works"><img src="~/Images/group-18_5 - Copy.png" class="img-fluid down-arrow"
					alt="..."></a>
		</div>

	</section>



	<section class=" container-fluid how-it-works" id="how-it-works">

		<h2>How it works</h2>


		<div class="row mb-3 ">
			<div class="col-sm-12 col-lg-7 ">
				<h3>Register yourself</h3>
				<p> Provide your basic information to register yourself as a service provider.</p>
				<a href="#">Read more <img src="~/Images/shape-2.png" alt=""></a>
			</div>
			<div class="col-sm-12 col-lg-5 ">
				<img src="~/Images/group-18-1.png" class="img-fluid" alt="..">
			</div>
		</div>

		<div class="row mb-3">
			<div class="col-sm-12 col-lg-5">
				<img src="~/Images/group-18-2.png" class="img-fluid" alt="">
			</div>
			<div class="col-sm-12 col-lg-7">
				<h3>Get service request</h3>
				<p>You will get service request from customers depend on service area and profile.</p>
				<a href="#">Read more <img src="~/Images/shape-2.png" alt=""></a>
			</div>
		</div>

		<div class="row mb-3">
			<div class="col-sm-12 col-lg-7">
				<h3>Complete service</h3>
				<p>Accept service request from your customers and complete your work.</p>
				<a href="#">Read more <img src="~/Images/shape-2.png" alt=""></a>
			</div>
			<div class="col-sm-12 col-lg-5">
				<img src="~/Images/group-18-3.png" class="img-fluid" alt="...">
			</div>
		</div>



		<div class="container text-center our-news-letter">
			<h2>GET OUR NEWSLETTER</h2>
			<div class="form-row d-flex justify-content-center align-items-center">
				<div class="form-group">
					<label for="email" style="display: none;">YOUR EMAIL</label>
					<input type="text" placeholder="YOUR EMAIL" id="email" class="form-control">
				</div>
				<div>
					<button class="btn-submit">Submit</button>
				</div>
			</div>
		</div>
	</section>












	<!--footer-->
	<footer>






		<div class=" footer-container">

			<div class="row">

				<div class="col-sm-3 footer-logo-col">
					<img src="~/Images/footer-logo.png" class="img-fluid footer-logo-image"
						href="home.html">
				</div>


				<div class="col-sm-6 footer-nav-col">

					<a class="footer-link " href="Home.html"> &nbsp;HOME</a>
					<a class="footer-link " href="#"> &nbsp;ABOUT</a>
					<a class="footer-link " href="#"> &nbsp;TESTIMONIALS</a>
					<a class="footer-link " href="faq.html"> &nbsp;FAQ</a>
					<a class="footer-link " href="#"> &nbsp;INSURANCE</a>
					<a class="footer-link " href="#"> &nbsp;IMPRESSUM</a>

				</div>

				<div class="col-sm-3 footer-social-col">
					<img src="~/Images/ic-facebook.png" class="img-fluid footer-social-image">

					<img src="~/Images/ic-instagram.png" class="img-fluid footer-social-image">
				</div>


			</div>
			<div class="row footer-term-row">

				<hr class="fluid footer-hr">

				<p class="footer-text">
					©2018 Helperland. All rights reserved.&nbsp;&nbsp; &nbsp;&nbsp; <a>Terms and
						Conditions
					</a>|<a>&nbsp;Privacy
						Policy</a>
				</p>

			</div>

		</div>

	</footer>





	<!-- script -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
		integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
		crossorigin="anonymous"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

</body>

</html>