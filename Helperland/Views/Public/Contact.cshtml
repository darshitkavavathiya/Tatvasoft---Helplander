@{
    ViewData["Title"] = "Contact";
}
<!doctype html>

<html lang="en">

<head>


    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>

    <link rel="stylesheet" href="~/css/faq.css" />
    <link rel="stylesheet" href="~/css/contact.css" />
    <title>Contact us</title>

</head>

<body>


    <!-- header section -->
    <!-- nav bar -->
    <header>

        <nav class="navbar navbar-expand-lg navbar-dark faq-nav-bg ">

            <div class="container-fluid">

                <a class="navbar-brand" href="#">
                    <img src="~/Images/logo-small.png" class=" navbar-brand nav-logo " href="Home.html">
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav ms-auto">

                        <button type="button" class="btn btn-outline-light  nav-book-btn">Book now</button>
                        <button type="button" class="btn btn-outline-light nav-price-btn" href="price.html">Prices &
                            services</button>
                        <a class="nav-link ">&nbsp;Warranty&nbsp;</a>
                        <a class="nav-link ">&nbsp;Blog&nbsp;</a>
                        <a class="nav-link ">&nbsp;Contact&nbsp; </a>
                        <button type="button" class="btn btn-outline-light nav-log-btn">Login</button>
                        <button type="button" class="btn btn-outline-light nav-become-btn">Become aHelper</button>


                    </div>

                </div>

            </div>

        </nav>

        <section class="img-section" id="top">
            <img src="~/Images/group-16_2.png" class="img-fluid">
        </section>

    </header>








    <main>




        <!-- contact us section -->
        <section class=" text-center container-fluid contact-us-container  ">

            <h1 class="contact-us-title">Contact us</h1>

            <img src="~/Images/faq-star.png" class="img-fluid col-md-3 " style="max-width: 60%;" alt="">

            <div class="row contact-us-row">

                <div class="col-md contact-us-col">
                    <img src="~/Images/forma-1_2.png" class="img-fluid" alt="">
                    <p class="contact-us-text">
                        1111 Lorem ipsum text 100,<br> Lorem ipsum AB
                    </p>
                </div>

                <div class="col-md contact-us-col">
                    <img src="~/Images/phone-call.png" class="img-fluid" alt="">
                    <p class="contact-us-text">
                        +49 (40) 123 56 7890<br> +49 (40) 987 56 0000
                    </p>
                </div>

                <div class="col-md contact-us-col">
                    <img src="~/Images/vector-smart-object.png" style="margin-top: 10px;" class="img-fluid" alt="">
                    <p class="contact-us-text">
                        info@helperland.com
                    </p>
                </div>

            </div>
            <hr>



        </section>

        <!-- contact us form -->
        <section class="text-center container-fluid contact-us-form">
            <h2 class="contact-form-title"> Get in touch with us</h2>

            <form action="#">

                <div class="row form-row-1">

                    <div class="col-md-6">
                        <input type="text" class="form-control contact-form-input" placeholder="First name">

                    </div>
                    <div class="col-md-6">
                        <input type="text" class="form-control contact-form-input" placeholder="Last name">

                    </div>
                </div>

                <div class="row">

                    <div class="col-md-6">
                        <div class="input-group mb-3 ">
                            <div class="input-group-prepend">
                                <span class="input-group-text  contact-form-input" id="basic-addon1">+45</span>
                            </div>
                            <input type="text" class="form-control  contact-form-input" placeholder="Mobile number">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <input type="text" class="form-control contact-form-input" placeholder="Email address">
                    </div>

                </div>
                <select class="form-select contact-form-input-select " aria-label="Default select example">
                    <option selected>Subject</option>
                    <option value="1"> Sub One</option>
                    <option value="2">Sub Two</option>
                    <option value="3">Sub Three</option>
                </select>


                <div class="form-group">

                    <textarea class="form-control contact-form-inputbox" id="exampleFormControlTextarea1" rows="3"
                        placeholder="Message"></textarea>
                </div>
                <a type="submit" class="btn btn-primary">Submit</a>
            </form>


        </section>
        <!-- map -->
        <section class="map">

          <iframe width="100%" height="400" frameborder="0" scrolling="no" marginheight="0"
                    marginwidth="0"
                    src="https://maps.google.com/maps?width=100%25&amp;height=400&amp;hl=en&amp;q=23.0351369,72.5004217+(My%20Business%20Name)&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed">
                    <a href="https://www.gps.ie/car-satnav-gps/">sat navs</a></iframe></div>
        </section>


    </main>








    <!--footer-->
    <footer>

        <div class="row contact-row">
            <div class="col-sm-2"></div>
            <div class="col-sm-8 contact-col-email">

                <p class="contact-text">
                    GET OUR NEWSLETTER
                </p>

                <div class="row ">

                    <div class="col-sm-7 contact-email-col">
                        <input class="contact-email-textbox" placeholder="  YOUR EMAIL">
                    </div>

                    <div class="col-sm-5 contact-submit-col">
                        <button class="contact-submit-button">submit</button>
                    </div>

                </div>

            </div>
            <div class="col-sm-2"></div>
        </div>





        <div class=" footer-container">

            <div class="row">

                <div class="col-sm-3 footer-logo-col">
                    <img src="~/Images/footer-logo.png" class="img-fluid footer-logo-image" href="home.html">
                </div>


                <div class="col-sm-6 footer-nav-col">

                    <a class="footer-link " asp-controller="Public" asp-action="Index"> &nbsp;HOME</a>
        <a class="footer-link " asp-controller="Public" asp-action="About"> ABOUT</a>
        <a class="footer-link "> &nbsp;TESTIMONIALS</a>
        <a class="footer-link " asp-controller="Public" asp-action="Faq"> &nbsp;FAQ</a>
        <a class="footer-link "> &nbsp;INSURANCE</a>
        <a class="footer-link "> &nbsp;IMPRESSUM</a>

                </div>

                <div class="col-sm-3 footer-social-col">
                    <img src="~/Images/ic-facebook.png" class="img-fluid footer-social-image">

                    <img src="~/Images/ic-instagram.png" class="img-fluid footer-social-image">
                </div>


            </div>
            <div class="row footer-term-row">

                <hr class="fluid footer-hr">

                <p class="footer-text">
                    ©2018 Helperland. All rights reserved.&nbsp;&nbsp; &nbsp;&nbsp; <a>Terms and Conditions
                    </a>|<a>&nbsp;Privacy
                        Policy</a>
                </p>

            </div>

        </div>

    </footer>




    <!-- script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

</body>

</html>